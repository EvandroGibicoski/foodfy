{%  extends "layout.njk" %}

{% block head %}
<link rel="stylesheet" href="/home.css">
{% endblock %}

{% block content %}
     <div class="wrapper">

               <img src="/119236-OQ05QX-268.png" alt="image wrapper">

          <div class="wrapper-info">
               <p><strong>As melhores receitas</strong></p>
               <p class="wrapper-content">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
          </div>

     </div>

     <div class="menu-info">
          <h2>Mais acessadas</h2>
     </div>

          <section class="menu">
          {% for item in items %}
               <div class="card-menu">

                    <div class="card-image">
                         <img src="{{item.image}}" alt="image burger">
                    </div>
                    <div class="card-info">
                         <p>{{item.title}}</p>
                         <p class="author">por {{item.author}}</p>
                    </div>
               </div>
          {% endfor %}

     {% endblock %}
     